{
  "exclude": ["dist", "node_modules", "tests", "coverage"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2021",
    "strict": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "types"]
  },

  "references": [
    {
      "path": "./apps/snap"
    },
    {
      "path": "./actors/bundler"
    },
    {
      "path": "./actors/deposit-screener"
    },
    {
      "path": "./actors/subtree-updater"
    },
    {
      "path": "./actors/test-actor"
    },
    {
      "path": "./actors/insertion-writer"
    },
    {
      "path": "./packages/contracts"
    },
    {
      "path": "./packages/config"
    },
    {
      "path": "./packages/circuits"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/op-request-plugins"
    },
    {
      "path": "./packages/crypto-utils"
    },
    {
      "path": "./packages/deploy"
    },
    {
      "path": "./packages/frontend-sdk"
    },
    {
      "path": "./packages/local-prover"
    },
    {
      "path": "./packages/e2e-tests"
    },
    {
      "path": "./packages/offchain-utils"
    },
    {
      "path": "./packages/idb-kv-store"
    },
    {
      "path": "./packages/persistent-log"
    }
  ]
}
