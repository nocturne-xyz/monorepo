{
  "name": "@nocturne-xyz/local-prover",
  "version": "1.0.1-alpha",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "check": "tsc --noEmit",
    "clean": "rm -rf .turbo dist",
    "gen-test-cases": "yarn gen-test-cases:joinsplit && yarn gen-test-cases:subtreeupdate",
    "gen-test-cases:joinsplit": "npx ts-node ./scripts/genJoinSplitTestCase.ts --writeFixture",
    "gen-test-cases:subtreeupdate": "npx ts-node ./scripts/genSubtreeUpdateTestCase.ts --writeFixture",
    "lint": "eslint --fix src --ext .ts",
    "prettier:check": "prettier --check ./src ./scripts",
    "prettier:write": "prettier --write ./src ./scripts",
    "test:unit": ""
  },
  "dependencies": {
    "@nocturne-xyz/sdk": "workspace:^",
    "bigint-conversion": "^2.3.0",
    "bigint-json": "^1.1.5",
    "snarkjs": "^0.5.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "find-yarn-workspace-root": "^2.0.0",
    "mocha": "^10.1.0",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
