{
  "name": "@nocturne-xyz/bundler",
  "version": "1.0.0-alpha",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "18.12.1"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "bin": {
    "bundler-cli": "dist/src/cli/index.js"
  },
  "scripts": {
    "build": "tsc --build",
    "check": "tsc --noEmit",
    "clean": "rm -rf .turbo dist",
    "lint": "eslint --fix src --ext .ts",
    "test:unit": "mocha --require ts-node/register test/**.test.ts --timeout 500000 --exit",
    "test:ci": "mocha --require ts-node/register test/**.test.ci.ts --timeout 500000 --exit",
    "bundler-cli": "npx ts-node src/cli/index.ts",
    "prettier:check": "prettier --check ./src ./test",
    "prettier:write": "prettier --write ./src ./test"
  },
  "dependencies": {
    "@nocturne-xyz/contracts": "1.0.7-alpha",
    "@nocturne-xyz/sdk": "1.0.63-alpha",
    "@types/commander": "^2.12.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "ajv": "^8.11.2",
    "bigint-json-serialization": "^1.0.1",
    "bullmq": "^3.4.1",
    "commander": "^9.4.1",
    "cors": "^2.8.5",
    "ethers": "^5.0.0",
    "express": "^4.18.2",
    "ioredis": "^5.2.4"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "find-yarn-workspace-root": "^2.0.0",
    "mocha": "^10.1.0",
    "prettier": "^2.8.0",
    "redis-memory-server": "^0.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
