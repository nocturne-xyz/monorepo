{
  "name": "@nocturne-xyz/subtree-updater",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "subtree-updater-cli": "dist/src/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:docker": "./build_docker.sh",
    "build:mock:docker": "./build_mock_docker.sh",
    "check": "tsc --noEmit",
    "clean": "rm -rf .turbo dist",
    "lint": "eslint --fix src --ext .ts",
    "prettier:check": "prettier --check ./src ./test",
    "prettier:write": "prettier --write ./src ./test",
    "server": "yarn ts-node ./server.ts",
    "setup-rapidsnark": "../circuits/scripts/setup_rapidsnark_prover.sh",
    "test:unit": "yarn setup-rapidsnark && mocha --timeout 500000 --require ts-node/register --exit test/**"
  },
  "dependencies": {
    "@nocturne-xyz/circuit-utils": "^0.1.12",
    "@nocturne-xyz/config": "1.0.15-testnet",
    "@nocturne-xyz/contracts": "1.0.33-testnet",
    "@nocturne-xyz/offchain-utils": "0.1.10",
    "@nocturne-xyz/sdk": "1.0.174-testnet",
    "@nocturne-xyz/tx-manager": "1.0.2-alpha",
    "async-mutex": "^0.4.0",
    "async-retry": "^1.3.3",
    "bigint-json-serialization": "^1.0.1",
    "commander": "^9.4.1",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "ioredis": "^5.3.1",
    "snarkjs": "^0.7.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.4",
    "@types/commander": "^2.12.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.44.0",
    "chai": "^4.3.7",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "find-yarn-workspace-root": "^2.0.0",
    "mocha": "^10.1.0",
    "prettier": "^2.8.8",
    "redis-memory-server": "^0.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "wtfnode": "^0.9.1"
  },
  "engines": {
    "node": ">=18"
  }
}
