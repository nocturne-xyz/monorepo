{
  "name": "@nocturne-xyz/frontend-sdk",
  "version": "2.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "check": "tsc --noEmit",
    "clean": "rm -rf .turbo dist",
    "codegen": "yarn codegen:subgraph",
    "codegen:subgraph": "graphql-codegen --config ./graphql-codegen-configs/subgraph.ts",
    "codegen:hasura": "graphql-codegen --config ./graphql-codegen-configs/hasura.ts",
    "copy-circuit-artifacts": "yarn copy-wasm && yarn copy-zkey && yarn copy-vkey",
    "copy-vkey": "cp ../../circuit-artifacts/joinsplit/joinsplit_cpp/vkey.json ./circuit-artifacts/joinsplit/joinsplitVkey.json",
    "copy-wasm": "cp ../../circuit-artifacts/joinsplit/joinsplit_js/joinsplit.wasm ./circuit-artifacts/joinsplit/joinsplit.wasm",
    "copy-zkey": "cp ../../circuit-artifacts/joinsplit/joinsplit_cpp/joinsplit.zkey ./circuit-artifacts/joinsplit/joinsplit.zkey",
    "lint": "eslint --fix src --ext .ts",
    "publish": "yarn build; yarn npm publish --access public",
    "test:unit": ""
  },
  "dependencies": {
    "@metamask/providers": "^11.1.1",
    "@nocturne-xyz/config": "workspace:^",
    "@nocturne-xyz/contracts": "workspace:^",
    "@nocturne-xyz/core": "workspace:^",
    "@nocturne-xyz/idb-kv-store": "workspace:^",
    "@nocturne-xyz/local-prover": "workspace:^",
    "@nocturne-xyz/op-request-plugins": "workspace:^",
    "@urql/core": "^4.1.1",
    "async-mutex": "^0.4.0",
    "async-retry": "^1.3.3",
    "bigint-json-serialization": "^1.0.1",
    "ethers": "^5.7.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@types/async-retry": "^1.4.5",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.0",
    "@types/react": "^18.2.20",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.8.0",
    "graphql": "^16.7.1",
    "mocha": "^10.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=18"
  }
}
