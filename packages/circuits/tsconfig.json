{
  "extends": "@flax/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonJs",
    "allowJs": true
  },
  "exclude": [
    "artifacts",
    "cache",
    "foundry_artifacts",
    "contracts",
    "node_modules",
    "dist",
    "config",
    "scripts",
    "tmp.ts",
    "hardhat.config.ts"
  ],
  "include": [
    "index.ts",
    "src/**/*.ts",
    "package.json"
  ]
}
