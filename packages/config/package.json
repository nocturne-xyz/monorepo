{
  "name": "@nocturne-xyz/config",
  "version": "1.5.1-tsup",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "yarn clean && tsup src/index.ts --format cjs,esm --dts",
    "check": "yarn clean && tsc --noEmit",
    "clean": "rm -rf .turbo dist",
    "lint": "eslint --fix src --ext .ts",
    "prettier:check": "prettier --check ./src ./test",
    "prettier:write": "prettier --write ./src ./test",
    "test:unit": "mocha --require ts-node/register test/** --timeout 10000 --exit",
    "publish": "yarn build; yarn npm publish --access public"
  },
  "dependencies": {
    "big-integer": "^1.6.42",
    "bigint-json-serialization": "^1.0.1",
    "ethers": "^5.7.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.8.0",
    "mocha": "^10.1.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=18"
  }
}
