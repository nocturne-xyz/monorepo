{
  "name": "@nocturne-xyz/subtree-updater",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "subtree-updater-cli": "dist/src/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "yarn dev:env && concurrently --kill-others \"yarn dev:redis\" \"yarn dev:updater\"",
    "dev:env": "cp .env.dev .env",
    "dev:redis": "docker run --name subtree-updater-redis -p 6381:6381 --rm redis redis-server --port 6381 --loglevel warning",
    "dev:updater": "nodemon src/cli/index.ts run subtree-updater --config-name-or-path localhost --log-dir ../../logs/subtree-updater --use-mock-prover --fill-batch-latency-ms 3000",
    "check": "tsc --noEmit",
    "clean": "rm -rf .turbo dist",
    "lint": "eslint --fix src --ext .ts",
    "prettier:check": "prettier --check ./src ./test",
    "prettier:write": "prettier --write ./src ./test",
    "server": "yarn ts-node ./server.ts",
    "setup-rapidsnark": "../circuits/scripts/setup_rapidsnark_prover.sh",
    "test:unit": "yarn setup-rapidsnark && mocha --timeout 500000 --require ts-node/register --exit test/**"
  },
  "dependencies": {
    "@nocturne-xyz/config": "workspace:^",
    "@nocturne-xyz/contracts": "workspace:^",
    "@nocturne-xyz/crypto-utils": "workspace:^",
    "@nocturne-xyz/offchain-utils": "workspace:^",
    "@nocturne-xyz/sdk": "workspace:^",
    "@openzeppelin/defender-relay-client": "1.47.1",
    "async-mutex": "^0.4.0",
    "async-retry": "^1.3.3",
    "bigint-json-serialization": "^1.0.1",
    "commander": "^9.4.1",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "ioredis": "^5.3.1",
    "snarkjs": "^0.7.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.4",
    "@types/commander": "^2.12.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.44.0",
    "chai": "^4.3.7",
    "concurrently": "^8.2.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "find-yarn-workspace-root": "^2.0.0",
    "mocha": "^10.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "redis-memory-server": "^0.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "wtfnode": "^0.9.1"
  },
  "engines": {
    "node": ">=18"
  }
}
