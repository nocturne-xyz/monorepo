{
  "name": "@nocturne-xyz/deposit-screener",
  "license": "MIT",
  "private": true,
  "version": "0.7.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "deposit-screener-cli": "dist/src/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "check": "tsc --noEmit",
    "clean": "rm -rf .turbo dist",
    "dev": "yarn dev:env && concurrently --kill-others \"yarn dev:server\" \"yarn dev:processor\"",
    "dev:env": "cp .env.dev .env",
    "dev:processor": "nodemon src/cli/index.ts run processor --config-name-or-path localhost --log-dir ../../logs/deposit-screener-processor --stdout-log-level info",
    "dev:server": "nodemon src/cli/index.ts run server --config-name-or-path localhost --port 3001 --log-dir ../../logs/deposit-screener-server --stdout-log-level info",
    "gen-test-cases:depositrequest": "npx ts-node ./scripts/genSignedDepositRequestTestCase.ts",
    "lint": "eslint --fix src --ext .ts",
    "prettier:check": "prettier --check ./src",
    "prettier:write": "prettier --write ./src",
    "screener-cli": "npx ts-node src/cli/index.ts",
    "test:generate-snapshot": "npx ts-node ./test/scripts/generateRulesetV1CallsSnapshot.ts",
    "test:unit": "mocha --require ts-node/register  --timeout 20000 test/**/*.test.ts -r dotenv/config"
  },
  "dependencies": {
    "@nocturne-xyz/config": "workspace:^",
    "@nocturne-xyz/contracts": "workspace:^",
    "@nocturne-xyz/core": "workspace:^",
    "@nocturne-xyz/offchain-utils": "workspace:^",
    "@nocturne-xyz/subgraph-sync-adapters": "workspace:^",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.40.0",
    "@opentelemetry/instrumentation": "^0.40.0",
    "@opentelemetry/resources": "^1.14.0",
    "@opentelemetry/sdk-metrics": "^1.14.0",
    "@opentelemetry/semantic-conventions": "^1.14.0",
    "@openzeppelin/defender-relay-client": "1.47.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/randombytes": "^2.0.0",
    "ajv": "^8.12.0",
    "async-mutex": "^0.4.0",
    "big-integer": "^1.6.42",
    "bigint-json-serialization": "^1.0.1",
    "bullmq": "^3.10.1",
    "commander": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "ioredis": "^5.3.1",
    "js-sha256": "^0.9.0",
    "morgan": "^1.10.0",
    "randombytes": "^2.1.0",
    "sorted-btree": "^1.8.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/commander": "^2.12.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.0",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.8.0",
    "find-yarn-workspace-root": "^2.0.0",
    "mocha": "^10.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "redis-memory-server": "^0.6.0",
    "sinon": "^15.0.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=18"
  }
}
