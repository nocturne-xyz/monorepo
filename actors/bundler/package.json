{
  "name": "@nocturne-xyz/bundler",
  "license": "MIT",
  "version": "0.3.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bundler-cli": "dist/src/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "yarn clean; tsc --build",
    "dev": "yarn dev:env && concurrently --kill-others \"yarn dev:redis\" \"yarn dev:server\" \"yarn dev:batcher\" \"yarn dev:submitter\"",
    "dev:env": "cp .env.dev .env",
    "dev:redis": "docker run --name bundler-redis -p 6379:6379 --rm redis redis-server --port 6379 --loglevel warning",
    "dev:server": "nodemon src/cli/index.ts run server --config-name-or-path localhost --port 3000 --log-dir ../../logs/bundler-server --stdout-log-level info",
    "dev:batcher": "nodemon src/cli/index.ts run batcher --config-name-or-path localhost --max-latency 60 --log-dir ../../logs/bundler-batcher",
    "dev:submitter": "nodemon src/cli/index.ts run submitter --config-name-or-path localhost --log-dir ../../logs/bundler-submitter",
    "bundler-cli": "npx ts-node src/cli/index.ts",
    "check": "tsc --noEmit",
    "clean": "rm -rf .turbo dist",
    "lint": "eslint --fix src --ext .ts",
    "prettier:check": "prettier --check ./src ./test",
    "prettier:write": "prettier --write ./src ./test",
    "test:unit": "mocha --require ts-node/register test/**.test.ts --timeout 500000 --exit"
  },
  "dependencies": {
    "@nocturne-xyz/config": "workspace:^",
    "@nocturne-xyz/contracts": "workspace:^",
    "@nocturne-xyz/core": "workspace:^",
    "@nocturne-xyz/offchain-utils": "workspace:^",
    "@openzeppelin/defender-relay-client": "1.47.1",
    "@types/commander": "^2.12.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "ajv": "^8.11.2",
    "bigint-json-serialization": "^1.0.1",
    "bullmq": "^3.4.1",
    "commander": "^9.4.1",
    "cors": "^2.8.5",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "ioredis": "^5.2.4",
    "morgan": "^1.10.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "concurrently": "^8.2.0",
    "dotenv": "^16.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.8.0",
    "find-yarn-workspace-root": "^2.0.0",
    "mocha": "^10.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "redis-memory-server": "^0.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=18"
  }
}
