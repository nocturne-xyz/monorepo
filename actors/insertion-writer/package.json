{
  "name": "@nocturne-xyz/insertion-writer",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "insertion-writer-cli": "dist/src/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "yarn dev:env && concurrently --kill-others \"yarn dev:writer\"",
    "dev:env": "cp .env.dev .env",
    "dev:writer": "nodemon src/cli/index.ts run insertion-writer --log-dir ../../logs/insertion-writer --stdout-log-level info",
    "check": "tsc --noEmit",
    "clean": "rm -rf .turbo dist",
    "lint": "eslint --fix src --ext .ts",
    "prettier:check": "prettier --check ./src ./test",
    "prettier:write": "prettier --write ./src ./test",
    "test:unit": "mocha --require ts-node/register test/** --timeout 500000 --exit"
  },
  "dependencies": {
    "@nocturne-xyz/config": "workspace:^",
    "@nocturne-xyz/core": "workspace:^",
    "@nocturne-xyz/offchain-utils": "workspace:^",
    "@nocturne-xyz/persistent-log": "workspace:^",
    "commander": "^9.4.1",
    "dotenv": "^16.0.3",
    "ioredis": "^5.3.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.4",
    "@types/commander": "^2.12.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.44.0",
    "chai": "^4.3.7",
    "concurrently": "^8.2.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "find-yarn-workspace-root": "^2.0.0",
    "mocha": "^10.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "redis-memory-server": "^0.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "wtfnode": "^0.9.1"
  },
  "engines": {
    "node": ">=18"
  }
}
