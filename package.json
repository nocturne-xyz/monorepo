{
  "private": true,
  "name": "monorepo",
  "scripts": {
    "circuits:compile": "yarn turbo run compile-circuits --filter=@flax/circuits...",
    "circuits:build": "yarn turbo run build --filter=@flax/circuits...",
    "lint": "yarn workspaces foreach --exclude @flax/circuits run lint",
    "build": "yarn workspaces foreach --exclude @flax/circuits run build",
    "test:unit": "yarn workspaces foreach --exclude @flax/circuits run test:unit"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "turbo": "^1.5.5"
  }
}
