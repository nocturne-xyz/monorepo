{
  "name": "monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "echo \"\nRunning clean in each package\" && yarn workspaces foreach run clean && echo \"\nDeleting yarn cache\" && rm -rf .yarn/cache && echo \"\nClearing yarn.lock contents\" && cp /dev/null yarn.lock",
    "build": "yarn turbo run build",
    "circuits:build": "yarn workspaces foreach run build-all-circuits --include @nocturne-xyz/circuits",
    "lint": "yarn turbo run lint",
    "local-prover:gen-test-cases": "yarn workspaces foreach run gen-test-cases --include @nocturne-xyz/local-prover",
    "rebuild-circuits-and-test-cases": "yarn circuits:build && yarn local-prover:gen-test-cases",
    "test": "yarn turbo run test --filter=!@nocturne-xyz/circuits...",
    "test:e2e": "yarn turbo run test:e2e --filter=@nocturne-xyz/e2e-tests",
    "test:unit": "yarn turbo run test:unit --filter=!@nocturne-xyz/circuits..."
  },
  "devDependencies": {
    "turbo": "1.6.3"
  },
  "packageManager": "yarn@3.2.0"
}
