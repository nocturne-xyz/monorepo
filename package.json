{
  "name": "monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn turbo run --no-daemon build",
    "build:nocache": "yarn turbo run --no-daemon build --force",
    "circuits:build": "yarn workspaces foreach run build-all-circuits --include @nocturne-xyz/circuits",
    "clean": "echo \"\nRunning clean in each package\" && yarn workspaces foreach run clean && echo \"\nDeleting yarn cache\" && rm -rf .yarn/cache && echo \"\nClearing yarn.lock contents\" && cp /dev/null yarn.lock",
    "dev:site": "scripts/run_site_dev.sh",
    "e2e-tests": "yarn workspace @nocturne-xyz/e2e-tests",
    "lint": "yarn turbo run --no-daemon lint",
    "local-prover:gen-test-cases": "yarn workspaces foreach run gen-test-cases --include @nocturne-xyz/local-prover",
    "prepare:docker": "scripts/prepare_docker.sh",
    "prettier:check": "yarn workspaces foreach run prettier:check",
    "prettier:write": "yarn workspaces foreach run prettier:write",
    "rebuild-circuits-and-test-cases": "yarn circuits:build && yarn local-prover:gen-test-cases",
    "test": "yarn turbo run --no-daemon test --filter=!@nocturne-xyz/circuits...",
    "test:ci": "yarn turbo run --no-daemon test:ci --filter=!@nocturne-xyz/circuits... --filter=!@nocturne-xyz/site...",
    "test:e2e": "yarn turbo run --no-daemon test:e2e --filter=@nocturne-xyz/e2e-tests",
    "test:unit": "yarn turbo run --no-daemon test:unit"
  },
  "devDependencies": {
    "lefthook": "^1.3.8",
    "turbo": "1.6.3"
  },
  "packageManager": "yarn@3.2.0",
  "engines": {
    "node": "18.12.1"
  }
}
