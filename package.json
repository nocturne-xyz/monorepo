{
  "private": true,
  "name": "monorepo",
  "scripts": {
    "circuits:compile": "yarn turbo run compile-circuits --filter=@flax/circuits...",
    "circuits:build": "yarn turbo run build --filter=@flax/circuits...",
    "circuits:test": "yarn turbo run test --filter=@flax/circuits...",
    "build": "yarn turbo run build --filter=!@flax/circuits...",
    "test": "yarn turbo run test --filter=!@flax/circuits...",
    "lint": "yarn turbo run lint",
    "test:unit": "yarn turbo run test:unit --filter=!@flax/circuits...",
    "ci:build": "yarn turbo run build --filter=!@flax/circuits...",
    "ci:test:unit": "yarn turbo run test:unit --filter=!@flax/circuits..."
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "turbo": "^1.5.5"
  }
}
