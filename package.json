{
  "private": true,
  "name": "monorepo",
  "scripts": {
    "circuits:build": "yarn workspaces foreach run circuits-build --include @flax/circuits",
    "sdk:gen-test-cases": "yarn workspaces foreach run gen-test-cases --include @flax/sdk",
    "rebuild-circuits-and-test-cases": "yarn circuits:build && yarn sdk:gen-test-cases",
    "build": "yarn turbo run build",
    "test": "yarn turbo run test --filter=!@flax/circuits...",
    "lint": "yarn turbo run lint",
    "test:unit": "yarn turbo run test:unit --filter=!@flax/circuits...",
    "ci:build": "yarn turbo run build",
    "ci:test:unit": "yarn turbo run test:unit --filter=!@flax/circuits...",
    "ci:test:e2e": "yarn turbo run test:e2e --filter=@flax/e2e-tests"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "turbo": "^1.5.5"
  }
}
