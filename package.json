{
  "name": "monorepo",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "echo \"\nRunning clean in each package\" && yarn workspaces foreach run clean && echo \"\nDeleting yarn cache\" && rm -rf .yarn/cache && echo \"\nClearing yarn.lock contents\" && cp /dev/null yarn.lock",
    "build": "yarn turbo run build",
    "circuits:build": "yarn workspaces foreach run build-all-circuits --include @flax/circuits",
    "lint": "yarn turbo run lint",
    "local-prover:gen-test-cases": "yarn workspaces foreach run gen-test-cases --include @flax/local-prover",
    "rebuild-circuits-and-test-cases": "yarn circuits:build && yarn local-prover:gen-test-cases",
    "test": "yarn turbo run test --filter=!@flax/circuits...",
    "test:e2e": "yarn turbo run test:e2e --filter=@flax/e2e-tests",
    "test:unit": "yarn turbo run test:unit --filter=!@flax/circuits..."
  },
  "resolutions": {
    "ffjavascript": "FLAXPrivacy/ffjavascript#3bfd14daf3f0b22cdaddc17a39bf10d6ee79716f"
  },
  "devDependencies": {
    "turbo": "1.6.3"
  },
  "packageManager": "yarn@3.2.0",
  "nohoist": [
    "local-prover/**/ffjavascript",
    "sdk/**/ffjavascript",
    "site/**/ffjavascript"
  ]
}
